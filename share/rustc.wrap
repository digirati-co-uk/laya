#!/bin/bash

crate_name=0

for i in "$@"; do
    if [[ $i == "--crate-name" ]]; then
        crate_name=1
        continue
    elif [[ "$crate_name" == "1" ]]; then
        if [[ "$i" == "laya" ]]; then
            set -- "$@" -C target-feature=+crt-static
            if [[ ! -z "$TARGET_CPU" ]]; then
                set -- "$@" -C target-cpu=$TARGET_CPU
            fi
            break
        fi
    fi
    crate_name=0
done

exec rustc "$@"
